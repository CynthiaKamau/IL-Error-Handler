extends layout/base

block content
    #heading
      h1.text-center IL Discontinuation Messages
      
    #content
      //- Do it like this...You're already in JavaScript land after the -
      - var items = rows

      div 

        div.text-center
          div.row
            form(method="POST", action="/observations")
              label(for='from') From  :
              input(type='date', name='start_date', id='start_date')
              label(for='to') To  :
              input(type='date', name='end_date', id='end_date')
            
              input(type='submit',name='submit',value='Submit', class='btn btn-primary').submit-button

        div

          script.
            $(document).ready(function() {
              $('#resultTable').DataTable({
                "order": [[ 0, "desc" ]]
                });
            });

          table#resultTable.table
            thead.thead-dark 
              tr: th Clinic Number 
                  th Sending Facility
                  th Source
                  th Status
                  th Observation Value 
                  th Observation Time 
                  th Processed 
                  th Date Processed
                  th Logs

            tbody 
              each item in items

                tr 
                  td=item.clinic_number
                  td=item.mfl_code
                  td=item.SENDING_APPLICATION
                  td=item.app_status
                  td=item.observation_value
                  td=item.observation_date
                  td=item.date_processed
                  td=item.processed
                  td=item.send_log
