extends layout/base

block content

    #heading
      h1.text-center IL Clients

    #content

    
    //- Do it like this...You're already in JavaScript land after the -
    - var items = rows
      
      div
        
        div.text-center
          div.row
            form(method="POST", action="/clients")
              label(for='from') From  :
              input(type='date', name='start_date', id='start_date')
              label(for='to') To  :
              input(type='date', name='end_date', id='end_date')
            
              input(type='submit',name='submit',value='Submit', class='btn btn-primary').submit-button
        div

          script.
            $(document).ready(function() {
              $('#resultTable').DataTable({
                "order": [[ 0, "desc" ]]
                });
            });

          table#resultTable.table.thead-light 
            thead 
              tr: th Clien Number
                  th Gender 
                  th Marital Status
                  th Phone Number 
                  th Group 
                  th Source 
                  th Enrollment Date
                  th ART Date 
                  th Processed 
                  th Date Processed 
                  th Logs 
            tbody 
              each item in items

                tr 
                  td=item.clinic_number
                  td=item.gender
                  td=item.marital
                  td=item.phone_no
                  td=item.group_id
                  td=item.SENDING_APPLICATION
                  td=item.enrollment_date
                  td=item.art_date
                  td=item.processed
                  td=item.date_processed
                  td=item.send_log




    
